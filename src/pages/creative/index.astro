---
import WorkPanel from '../../components/WorkPanel.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Creative" description="Creative work including film, digital projects, and blog" showHeader={false}>
    <h1 class="mb-8 font-serif text-2xl leading-tight italic sm:mb-12 sm:text-4xl">Creative</h1>
    <p class="mb-16 leading-relaxed sm:mb-20 sm:text-lg">
        Explore my creative work across film, digital projects, and written pieces.
    </p>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 sm:gap-8 md:gap-10">
        <WorkPanel
            title="Film"
            description="Video and film projects"
            href="#film"
        />
        <WorkPanel
            title="Digital"
            description="Digital art and design work"
            href="#digital"
        />
        <WorkPanel
            title="Blog"
            description="Written pieces and articles"
            href="#blog"
        />
    </div>

    <!-- Film Section -->
    <section id="film" class="mt-20 mb-16 sm:mt-24 sm:mb-20">
        <h2 class="mb-8 font-serif text-2xl italic">Film</h2>
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
            <article class="rounded-lg p-6">
                <h3 class="font-serif text-lg font-medium sm:text-xl">[Film Project 1]</h3>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">[Project type] • [Year]</p>
                <p class="mt-3 leading-relaxed">[Add description of film project]</p>
            </article>

            <article class="rounded-lg p-6">
                <h3 class="font-serif text-lg font-medium sm:text-xl">[Film Project 2]</h3>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">[Project type] • [Year]</p>
                <p class="mt-3 leading-relaxed">[Add description of film project]</p>
            </article>

            <article class="rounded-lg p-6">
                <h3 class="font-serif text-lg font-medium sm:text-xl">[Film Project 3]</h3>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">[Project type] • [Year]</p>
                <p class="mt-3 leading-relaxed">[Add description of film project]</p>
            </article>
        </div>
    </section>

    <!-- Digital Section -->
    <section id="digital" class="mb-16 sm:mb-20">
        <h2 class="mb-8 font-serif text-2xl italic">Digital</h2>
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
            <article class="rounded-lg p-6">
                <h3 class="font-serif text-lg font-medium sm:text-xl">[Digital Project 1]</h3>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">[Project type] • [Year]</p>
                <p class="mt-3 leading-relaxed">[Add description of digital project]</p>
            </article>

            <article class="rounded-lg p-6">
                <h3 class="font-serif text-lg font-medium sm:text-xl">[Digital Project 2]</h3>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">[Project type] • [Year]</p>
                <p class="mt-3 leading-relaxed">[Add description of digital project]</p>
            </article>

            <article class="rounded-lg p-6">
                <h3 class="font-serif text-lg font-medium sm:text-xl">[Digital Project 3]</h3>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">[Project type] • [Year]</p>
                <p class="mt-3 leading-relaxed">[Add description of digital project]</p>
            </article>
        </div>
    </section>

    <!-- Blog Section -->
    <section id="blog" class="mb-16 sm:mb-20">
        <h2 class="mb-8 font-serif text-2xl italic">Blog</h2>
        <div class="space-y-6">
            <article class="border-l-2 border-main pl-6">
                <h3 class="font-serif text-lg font-medium">
                    <a href="/blog" class="hover:underline">[Blog Post Title]</a>
                </h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">[Publication date]</p>
                <p class="mt-2 leading-relaxed">[Brief excerpt from blog post]</p>
            </article>

            <article class="border-l-2 border-main pl-6">
                <h3 class="font-serif text-lg font-medium">
                    <a href="/blog" class="hover:underline">[Blog Post Title]</a>
                </h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">[Publication date]</p>
                <p class="mt-2 leading-relaxed">[Brief excerpt from blog post]</p>
            </article>

            <article class="border-l-2 border-main pl-6">
                <h3 class="font-serif text-lg font-medium">
                    <a href="/blog" class="hover:underline">[Blog Post Title]</a>
                </h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">[Publication date]</p>
                <p class="mt-2 leading-relaxed">[Brief excerpt from blog post]</p>
            </article>
        </div>
        <div class="mt-10">
            <a href="/blog" class="inline-block font-serif italic hover:underline">View All Blog Posts →</a>
        </div>
    </section>
</BaseLayout>
