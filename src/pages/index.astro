---
import siteConfig from '../data/site-config';
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import { marked } from 'marked';
---

<BaseLayout description={siteConfig.description}>
    <section class="mb-16">
        <div class="flex flex-col lg:flex-row gap-8 items-start">
            <div class="w-full lg:w-[30%] flex-shrink-0">
                <img
                    src={siteConfig.avatar?.src}
                    alt={siteConfig.avatar?.alt || siteConfig.title}
                    class="w-full h-[400px] lg:h-auto object-cover rounded-md"
                    style="aspect-ratio: 1 / 1;"
                />
            </div>

            <div class="w-full lg:w-[70%]">
                {siteConfig.title && <h1 class="font-serif text-3xl leading-tight font-medium sm:text-5xl sm:leading-tight">{siteConfig.title}</h1>}
                {siteConfig.subtitle && <p class="mt-2 text-lg text-muted">{siteConfig.subtitle}</p>}

                {siteConfig.hero?.text && (
                    <div class="prose sm:prose-lg max-w-none mt-4" set:html={marked.parse(siteConfig.hero.text)} />
                )}

                {siteConfig.hero?.actions && (
                    <div class="flex flex-wrap gap-4 mt-6">
                        {siteConfig.hero.actions.map((action) => (
                            <Button href={action.href}>{action.text}</Button>
                        ))}
                    </div>
                )}
            </div>
        </div>
    </section>
</BaseLayout>
